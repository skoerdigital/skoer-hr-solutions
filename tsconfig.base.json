{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@skoer-hr-solutions/auth": ["libs/auth/src/index.ts"],
      "@skoer-hr-solutions/core": ["libs/core/src/index.ts"],
      "@skoer-hr-solutions/data-access": [
        "libs/shared/data-access/src/index.ts"
      ],
      "@skoer-hr-solutions/error-page": ["libs/error-page/src/index.ts"],
      "@skoer-hr-solutions/layout/container": [
        "libs/layout/container/src/index.ts"
      ],
      "@skoer-hr-solutions/layout/header": ["libs/layout/header/src/index.ts"],
      "@skoer-hr-solutions/layout/shell": ["libs/layout/shell/src/index.ts"],
      "@skoer-hr-solutions/layout/side-menu": [
        "libs/layout/side-menu/src/index.ts"
      ],
      "@skoer-hr-solutions/shared/directives": [
        "libs/shared/directives/src/index.ts"
      ],
      "@skoer-hr-solutions/shared/pipes": ["libs/shared/pipes/src/index.ts"],
      "@skoer-hr-solutions/shared/tokens": ["libs/shared/tokens"],
      "@skoer-hr-solutions/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@skoer-hr-solutions/shared/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
